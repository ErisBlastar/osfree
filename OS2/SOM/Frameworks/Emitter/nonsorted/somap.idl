#ifndef somap_idl
#define somap_idl
#include <somos.idl>
#include <somtdm.idl>
module somAttributePersistence
{
	interface Persist :	TypecodeDataManipulator, somOS::ServiceBasePRef
	{
		void load_attribute(
			in string attribute_name,
			out void * buffer,
			in TypeCode attribute_tc);
		void store_attribute(
			in string attribute_name,
			in void * buffer,
			in TypeCode attribute_tc);
#ifdef __SOMIDL__
		implementation
		{
			releaseorder : load_attribute,store_attribute;
			majorversion = 3;
			minorversion = 0;
			dllname = "somos.dll";
		};
#endif /* __SOMIDL__ */
	};
};
#endif /* somap_idl */
