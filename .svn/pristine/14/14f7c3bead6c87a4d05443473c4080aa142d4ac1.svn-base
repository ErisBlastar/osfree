#ifndef paramdef_idl
#define paramdef_idl
#include <containd.idl>


interface ParameterDef :
	Contained
{
	enum ParameterMode {IN,OUT,INOUT};

	struct ParameterDescription
	{
		Identifier name;
		RepositoryId id;
		RepositoryId defined_in;
		TypeCode type;
		ParameterMode mode;
	};
	attribute TypeCode type;
	attribute ParameterMode mode;
#ifdef __SOMIDL__
	implementation
	{
		_set_type : caller_owns_parameters="type";
		_get_type: dual_owned_result;
		releaseorder : 
			_get_type,
			_set_type,
			_get_mode,
			_set_mode;
		callstyle = idl;
		majorversion = 2;
		minorversion = 1;
		filestem = paramdef;
		dllname = "somir.dll";
	};
#endif /* __SOMIDL__ */
};

#endif /* paramdef_idl */
